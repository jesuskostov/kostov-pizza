\nimport { fb } from '../firebase'\nimport axios from 'axios'\n\nexport default {\n    name: 'Coupon',\n    data() {\n        return {\n            userUid: '',\n            coupons: [],\n            name: ''\n        }\n    },\n    mounted() {\n        fb.auth().onAuthStateChanged( user => {\n            if (user) {\n                this.userUid = user.uid;\n                this.getInfo()\n            }\n        })\n    },\n    methods: {\n        async getInfo() {\n            let res = await axios.get(`https://pizza-5f900.firebaseio.com/users/user_${this.userUid}.json`)\n            this.coupons = res.data.coupon\n            this.name = res.data.user_info.name\n        }\n    }\n}   \n</script>\n\n<style lang=\"scss\" scoped>\n.coupon-container {\n    position: fixed;\n    bottom: 50px;\n    left: 30px;\n    z-index: 9999999999;\n}\n\n.img {\n    text-align: center;\n    flex-basis: 20%;\n    img {\n        width: 60%;\n    }\n}\n\n.coupon {\n    display: flex;\n    padding: 10px;\n    padding-left: 0;\n    margin-bottom: 20px;\n    text-align: left;\n    background-color: #fff;\n    border-radius: 16px;\n    box-shadow: 0 6px 8px rgba(0, 0, 0, 0.11);\n    overflow: hidden;\n    width: 80%;\n    min-height: 90px;\n    align-items: center;\n\n    p {\n        margin: 0;\n        font-size: 15px;\n    }\n}\n\n</style>"]}]}